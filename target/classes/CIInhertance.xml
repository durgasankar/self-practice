<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
             
               <!--  Object 1-->
               <bean id="address" class="com.bridgeLabz.spring.dependancyInjection.CI.dependentObject.Address">
               		<constructor-arg value="balasore"></constructor-arg>
               		<constructor-arg value="odisha"></constructor-arg>
               		<constructor-arg value="India"></constructor-arg>
               </bean>
               
               <bean id="employee" class="com.bridgeLabz.spring.dependancyInjection.CI.dependentObject.Employee">
               		<constructor-arg value="2468"></constructor-arg>
               		<constructor-arg value="Durgasankar"></constructor-arg>
               		<constructor-arg >
               			<ref bean="address"/>
               		</constructor-arg>
               </bean>
               
               <bean id="employee1" class="com.bridgeLabz.spring.dependancyInjection.CI.dependentObject.Employee">
               		<constructor-arg value="2468"></constructor-arg>
               		<constructor-arg value="Durgasankar"></constructor-arg>
               </bean>
               
               <bean id="project" class="com.bridgeLabz.spring.dependancyInjection.CI.Collection.Project">
               		<constructor-arg>
               			<ref bean="employee"/>
               		</constructor-arg>
               		<constructor-arg>
               			<list>
               				<value>Java</value>
               				<value>C++</value>
               				<value>Manual Testing</value>
               				<value>Math</value>
               			</list>
               		</constructor-arg>
               		
               		
               </bean>
               
               
               <bean id="project1" class="com.bridgeLabz.spring.dependancyInjection.CI.Collection.Project">
               		<constructor-arg>
               			<ref bean="employee1"/>
               		</constructor-arg>
               		<constructor-arg>
               			<list>
               				<value>Java</value>
               				<value>C++</value>
               				<value>Manual Testing</value>
               				<value>Math</value>
               			</list>
               		</constructor-arg>
               		
               		
               </bean>
               
               
               <!-- Constructor reference -->
               
               
               
				

</beans>